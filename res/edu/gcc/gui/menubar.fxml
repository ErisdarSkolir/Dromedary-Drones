<?xml version="1.0" encoding="UTF-8"?>

<?import edu.gcc.gui.Mdl2Icon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>


<ToolBar blendMode="MULTIPLY" onMouseClicked="#onDoubleClick" onMouseDragged="#onMouseDragged" onMousePressed="#onMousePressed" style="-fx-padding: 0;" styleClass="root" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.gcc.gui.WindowBar">
  <items>
      <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" />
      <MenuBar style="-fx-padding: 0;">
        <menus>
          <Menu text="File">
            <items>
                  <CheckMenuItem mnemonicParsing="false" onAction="#toggleDarkMode" text="Dark Mode" />
              <MenuItem mnemonicParsing="false" onAction="#onCloseButtonPressed" text="Exit" />
            </items>
          </Menu>
          <Menu text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <Label fx:id="title" text="Title" textFill="#757575">
         <padding>
            <Insets left="16.0" right="16.0" />
         </padding>
      </Label>
      <Region fx:id="spacer" mouseTransparent="true" />
      <MenuBar style="-fx-padding: 0;">
        <menus>
          <Menu mnemonicParsing="false">
               <graphic>
                  <Mdl2Icon alignment="CENTER" graphicTextGap="0.0" iconCode="E921" maxHeight="-Infinity" maxWidth="-Infinity" onMouseReleased="#onMinimizeButtonPressed" prefHeight="15.0" prefWidth="25.0" textAlignment="CENTER" />
               </graphic>
          </Menu>
          <Menu mnemonicParsing="false">
               <graphic>
                  <Mdl2Icon alignment="CENTER" graphicTextGap="0.0" iconCode="E922" maxHeight="-Infinity" maxWidth="-Infinity" onMouseReleased="#onRestoreButtonPressed" prefHeight="15.0" prefWidth="25.0" textAlignment="CENTER" />
               </graphic>
          </Menu>
          <Menu mnemonicParsing="false" onAction="#onCloseButtonPressed" style=".h: #E81123;">
               <graphic>
                  <Mdl2Icon alignment="CENTER" graphicTextGap="0.0" iconCode="E711" maxHeight="-Infinity" maxWidth="-Infinity" onMouseReleased="#onCloseButtonPressed" prefHeight="15.0" prefWidth="25.0" textAlignment="CENTER" />
               </graphic>
          </Menu>
        </menus>
      </MenuBar>
  </items>
</ToolBar>
